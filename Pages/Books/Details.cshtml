    @{
    <tr>
      <td>@Model.booksInfo.title</td>
      <td>@Model.booksInfo.author</td>
      <td>@Model.booksInfo.publisher</td>
      <td>@Model.booksInfo.categories</td>
      <td>@Model.booksInfo.pricesâ‚¹</td>
        @{
          if( @Model.booksInfo.assignedTo == "NULL"){
            <td>No One</td>
          }else{
            <td>@Model.booksInfo.assignedTo</td>
          }

        }
      @{
        if(@Model.role == "admin"){
          <td>
            <a class="btn btn-danger btn-sm" href="/Books/DeleteBook?id=@Model.booksInfo.id">Delete</a>
          </td>
        }
      }
